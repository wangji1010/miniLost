  padding-left: 40rpx;
  padding-right: 40rpx;
}
.index-box .index-box-top {
  border-radius: 24rpx;
  margin-top: 20rpx;
  width: 100%;
  height: 320rpx;
  background-color: #ffffff;
  box-shadow: 0 0 3px 3px rgba(0, 0, 0, 0.1);
}
.index-box .index-box-top .top-content {
  text-align: center;
  padding-top: 15%;
}
.index-box .index-box-top .top-content image {
  width: 120rpx;
  height: 120rpx;
}
.index-box .index-box-top .top-content .top-title {
  margin-left: 30rpx;
  display: inline-block;
}
.index-box .index-box-top .top-content .top-title .title-content {
  line-height: 70rpx;
}
