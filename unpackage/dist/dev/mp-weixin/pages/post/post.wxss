.post-box {
  padding: 0 40rpx;
}
.post-box .post-add-btn {
  position: fixed;
  right: 20px;
  bottom: 26px;
  width: 50px;
  height: 50px;
  -webkit-border-radius: 50%;
          border-radius: 50%;
}
.post-box .post-add-btn image {
  width: 50px;
  height: 50px;
}
.post-box .post-content-item {
  margin-bottom: 40rpx;
  margin-top: 30rpx;
  width: 100%;
  height: 300rpx;
}
.post-box .post-content-item .post-user-info image {
  width: 60rpx;
  height: 60rpx;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  margin-right: 20rpx;
}
.post-box .post-content-item .post-user-info .user-name-date {
  line-height: 38rpx;
  display: inline-block;
}
.post-box .post-content-item .post-user-info .user-name-date .username {
  font-size: 24rpx;
}
.post-box .post-content-item .post-user-info .user-name-date .date {
  font-size: 18rpx;
}
.post-box .post-content-item .post-user-info .post-title {
  font-size: 30rpx;
  margin-top: 20rpx;
}
.post-box .post-content-item .post-user-info .post-content {
  color: #667074;
  margin-top: 26rpx;
